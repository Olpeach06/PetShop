<Page x:Class="PetShop.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatalogPage">

    <Grid Background="#FF5F344C">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Назад" Click="BtnBack_Click" Margin="659,22,44,10" BorderBrush="Black" Foreground="#FFECC286" FontWeight="Bold" Background="#FF75425E"/>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8,17,142,3" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.094"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <ComboBox x:Name="cmbCategories" Width="200" Margin="5"
              DisplayMemberPath="name" SelectedValuePath="category_id"
              SelectionChanged="CmbCategories_SelectionChanged"/>

            <ComboBox x:Name="cmbFirms" Width="200" Margin="5"
              DisplayMemberPath="name" SelectedValuePath="firm_id"
              SelectionChanged="CmbFirms_SelectionChanged"/>

            <TextBox x:Name="txtSearch" Width="200" Margin="5" TextChanged="TxtSearch_TextChanged"/>
        </StackPanel>

        <!-- Список товаров -->
        <ListView x:Name="lvProducts" Grid.Row="2" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="5">
                        <Grid Width="750">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <!-- Используем свойство CurrentPhoto для вывода изображения -->
                            <Image Grid.Column="0" Source="{Binding CurrentPhoto}" 
                                   Height="80" Width="80" Stretch="UniformToFill"/>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding description}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding FIRM.name}"/>
                                <TextBlock Text="{Binding CATEGORIES.name}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding price, StringFormat='{}{0:C}'}" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding quantity, StringFormat='Остаток: {0} шт.'}" 
                                     VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="3" Content="В корзину" 
                                    Background="#FF5D196D" Foreground="White"
                                    Click="BtnAddToCart_Click" Tag="{Binding product_id}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>